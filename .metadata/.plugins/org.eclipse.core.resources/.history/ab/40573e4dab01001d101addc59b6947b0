package ch04.unit3;

public class ForEx09 {

	public static void main(String[] args) {
		//별찍기 피라미드
//		   * 공백5 별1개
//	 	  ***
//		 *****
//		*******
		for(int i=1;i<=9;i+=2) {
			for(int k=(i-1)/2;k<1/2;k++) {
				System.out.print(" ");
			}
		
			for(int j=1; j<=i; j++) {
				System.out.print("*");
			}
			System.out.println();
		}
		
	}
}


