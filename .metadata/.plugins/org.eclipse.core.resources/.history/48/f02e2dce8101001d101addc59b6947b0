package ch04.unit3;

import java.util.Scanner;

public class rockscissorpaper {

	public static void main(String[] args) {
		// 가위바위보 게임
		Scanner sc = new Scanner(System.in);

		int user, com;

		while (true) {
			do {
				System.out.println("1.가위 2.바위 3.보 4. 종료 => ");
				user = sc.nextInt();
			} while (user < 1 || user > 4);
		}
		if(user == 4) break;
		com = (int) (Math.random() * 3) + 1;// 1~3 난수
		sc.close();
	}

}
