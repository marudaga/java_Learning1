package ch04.unit4;

import java.util.Scanner;

public class ContinueEx01 {
	public static void main(String[] args) {
		//정수를 입력 받아 입력 받은 수중 짝수의 합 구하기
		//단, 입력 받은 수가 0이하이면 프로그램 종료
		int a,sum=0;
		Scanner sc=new Scanner(System.in);
		while(true) {
			a=sc.nextInt();
			if(a%2==0) {
				sum+=a;
			}
		}
		
	}
}
